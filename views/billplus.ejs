<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bill Plus</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/static/css/billplus.css">
</head>
<body>
    <header>
        <h1>Bill Plus</h1>
    </header>

    <section class="product-list">
        <h2>Product List</h2>
        <table id="product-table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Unit</th>
                    <th>Per Qty</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>GST</th>
                    <th>Add</th>
                </tr>
            </thead>
            <tbody>
                <!-- Product list will be populated dynamically -->
            </tbody>
        </table>
    </section>

    <section class="bill-draft">
        <h2>Bill Draft</h2>
        <table id="bill-draft-table">
            <!-- Bill draft items will be inserted here -->
        </table>
        <p id="total-price">Total Price: </p>
        <button id="discard-bill">Discard Bill</button>
        <button id="confirm-bill">Confirm Bill</button>
    </section>

    <script src="/static/js/billplus.js"></script>
</body>
</html>
