<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Login to Invoice Billing</title>
        <link rel="stylesheet" href="/static/css/login.css"> 
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
        <script src="/static/js/login.js"></script>
    </head>
    <body class="body">
        <div class="container">
            <div class="form-box">
                <form name="Formfill" onsubmit="return false">
                    <h1>INVOICE BILLING</h1>
                    <h2>Login</h2>
                    <div class="inputarea">
                        <i class='bx bxs-user'></i>
                        <input type="text" name="Username" placeholder='Username' id="username">
                    </div>
                    <div class="inputarea">
                        <i class='bx bxs-lock-alt' ></i>
                        <input type="password" name="Password" placeholder='Password' id="passwd">
                    </div>
                    <div class="button">
                        <input type="submit" class="btn" onclick="loginUser()" id="" value=" Login ">
                    </div>
                    <div class="group">
                       <span><a href="/register">  Register  </a></span>
                    </div>
                </form>
            </div>
            <div class="popup" id="popup">
                <ion-icon name="checkmark-circle-outline"></ion-icon>
                <p>Login Successful</p>
                <a href="#"><button onclick="closeSlide()">OK</button></a>
            </div>
        </div>
        <!-- <script src="/stati"></script> -->
    </body>
</html>

